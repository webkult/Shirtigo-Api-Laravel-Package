{
    "name": "laravel-shirtigo/wrapper",
    "description": "Laravel wrapper for the Shirtigo PHP API SDK",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Laravel Shirtigo Team",
            "email": "info@laravel-shirtigo.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/framework": "^10.0|^11.0",
        "webkult/shirtigo-php-api-wrapper": "^1.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpunit/phpunit": "^10.0",
        "rector/rector": "^0.18",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "LaravelShirtigo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LaravelShirtigo\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "LaravelShirtigo\\Providers\\ShirtigoServiceProvider"
            ],
            "aliases": {
                "Shirtigo": "LaravelShirtigo\\Facades\\Shirtigo"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}